{
  "name": "ence",
  "version": "1.0.0",
  "description": "automation-friendly json schemas ",
  "author": "g-harel",
  "license": "MIT",
  "main": "index.js",
  "bin": {
    "ence": "ence.js"
  },
  "scripts": {
    "prepack": "npm run build",
    "postpublish": "npm run clean",
    "test": "run-s format test:unit",
    "test:unit": "jest",
    "build": "tsc",
    "clean": "trash '*.js' '*.d.ts'",
    "format": "prettier --list-different --write --ignore-path .gitignore '**/*.{js,ts}'"
  },
  "dependencies": {
    "chalk": "^2.4.1"
  },
  "devDependencies": {
    "@types/chalk": "^2.2.0",
    "@types/globby": "^8.0.0",
    "@types/jest": "^23.1.1",
    "@types/node": "^10.3.5",
    "jest": "^23.2.0",
    "npm-run-all": "^4.1.3",
    "prettier": "^1.13.6",
    "trash-cli": "^1.4.0",
    "ts-jest": "^22.4.6",
    "typescript": "^2.9.2"
  },
  "homepage": "https://github.com/g-harel/ence#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/g-harel/ence"
  },
  "bugs": {
    "url": "https://github.com/g-harel/ence/issues"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "testMatch": [
      "**/?(*.)test.ts"
    ]
  },
  "prettier": {
    "tabWidth": 4,
    "trailingComma": "all",
    "bracketSpacing": false,
    "arrowParens": "always"
  }
}
